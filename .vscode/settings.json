{
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.requireConfig": true, // Require Prettier config file to format
    "prettier.ignorePath": ".prettierignore", // Optional: specify Prettier ignore file
    "editor.formatOnSave": true, // Automatically format files on save
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier as the default formatter
    "prettier.singleQuote": true, // Example Prettier configuration
    "prettier.semi": true,
    "eslint.alwaysShowRuleFailuresAsWarnings": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ], // Specify languages for ESLint
}